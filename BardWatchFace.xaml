<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeedTest.BardWatchFace">
    <VerticalStackLayout>
        <Grid Background="Black">

            <!-- Hour hand -->
            <Path Stroke="White" StrokeThickness="10" Data="M0,0 L100,0" x:Name="HourHand"/>

            <!-- Minute hand -->
            <Path Stroke="White" StrokeThickness="5" Data="M0,0 L100,0" x:Name="MinuteHand"/>

            <!-- Second hand -->
            <Path Stroke="Red" StrokeThickness="2" Data="M0,0 L100,0" x:Name="SecondHand"/>

        </Grid>
    </VerticalStackLayout>
</ContentView>
