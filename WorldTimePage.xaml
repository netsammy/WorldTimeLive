<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:WorldTime.Models"
             x:Class="WorldTime.WorldTimePage"
             Title=""
             xmlns:viewmodel="clr-namespace:WorldTime.ViewModels"             
            x:DataType="viewmodel:WorldTimePageViewModel"
              xmlns:controls="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
               xmlns:Time="clr-namespace:WorldTime" 
           >


    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>-->

        <AbsoluteLayout>
            <controls:WebView x:Name="webView" Grid.Row="0"
                              AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                              AbsoluteLayout.LayoutFlags="All"
                              ZIndex="0" Margin="-100" />

            <CollectionView Grid.Row="0"
                            ItemsSource="{Binding TimeZones}"
                            ItemSizingStrategy="MeasureFirstItem"
                             AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                              AbsoluteLayout.LayoutFlags="All"
                            ZIndex="2">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="3" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid  BackgroundColor="Transparent"
                      Margin="5"
                      Padding="20"
                      HeightRequest="130"
                      WidthRequest="250">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0"
                           Text="{Binding DisplayName}"
                           FontSize="16"
                           FontAttributes="Bold"
                          
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"  />

                            <Time:WatchFace Grid.Row="1"
                                    TimeNow="{Binding CurrentTime}"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"  />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Grid.Row="1"
                    Text="Refresh"
                    x:Name="btnRefresh"
                    Command="{Binding GetRefreshCommand}"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"
                    ZIndex="3" IsVisible="false"
                    />


           
        </AbsoluteLayout>

        <!-- Settings button -->
        <Button
            x:Name="btnSettings"
            Command="{Binding NavigateToSettingsCommand}"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="0,0,16,16"
                    Text="Settings"     
            
            ZIndex="3"
             ScaleX="1.0"
                ScaleY="1.0"
            
            >
        </Button>

    </Grid>

